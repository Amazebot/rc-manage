{
  "name": "rc-manage",
  "version": "0.0.0",
  "description": "CLI for automated provisioning and config of Rocket.Chat instances",
  "main": "index.js",
  "scripts": {
    "pretest": "standard",
    "start": "node ./lib/index.js",
    "test": "nyc mocha --exit --opts ./mocha.opts ./lib/**/*.spec.js",
    "coveralls": "cat coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "save": "git add -A && git status -s && git-cz",
    "release": "standard-version",
    "publish": "git push --follow-tags origin master && npm publish"
  },
  "engines": {
    "node": "> 8.0.0",
    "npm": "> 5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Amazebot/rc-manage.git"
  },
  "keywords": [
    "rocketchat",
    "cli",
    "chatops",
    "inquirer"
  ],
  "author": "Tim Kinnane @ Amazebot",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Amazebot/rc-manage/issues"
  },
  "homepage": "https://github.com/Amazebot/rc-manage#readme",
  "nyc": {
    "reporter": [
      "lcovonly",
      "text"
    ],
    "include": [
      "lib"
    ],
    "exclude": [
      "**/*.spec.js"
    ]
  },
  "standard": {
    "env": [
      "mocha"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.1.0",
    "mocha": "^4.1.0",
    "mocha-clean": "^1.0.0",
    "nyc": "^11.4.1",
    "sinon": "^4.1.6",
    "standard": "^10.0.3",
    "standard-version": "^4.3.0"
  },
  "dependencies": {
    "asteroid": "^2.0.3",
    "commander": "^2.13.0",
    "glob": "^7.1.2",
    "inquirer": "^5.0.0",
    "lodash": "^4.17.4",
    "moment": "^2.20.1",
    "request": "^2.83.0",
    "simple-encryptor": "^1.1.1",
    "winston": "^2.4.0",
    "ws": "^4.0.0",
    "yamljs": "^0.3.0",
    "yargs": "^10.1.1"
  }
}
